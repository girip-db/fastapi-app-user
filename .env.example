# ============================================================
# Databricks Apps User Auth Demo -- Configuration
# ============================================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env
#
# All deploy scripts and examples read from this file.
# ============================================================

# Your Databricks workspace URL
WORKSPACE_URL=https://<YOUR_WORKSPACE_URL>

# SQL warehouse ID (find in SQL Warehouses > your warehouse > Connection Details)
WAREHOUSE_ID=<YOUR_WAREHOUSE_ID>

# Databricks CLI profile name (created via: databricks auth login --host $WORKSPACE_URL --profile <name>)
CLI_PROFILE=my-env

# OAuth scopes required by the app's User Authorization config
SCOPES="sql iam.current-user:read catalog.tables:read iam.access-control:read"

# --- Populated after deploying fastapi-app/ ---

# FastAPI app name (used in deploy.sh)
FASTAPI_APP_NAME=fastapi-app

# Workspace path to sync FastAPI source code to
FASTAPI_WORKSPACE_PATH=/Workspace/Users/<YOUR_USERNAME>/fastapi-app-user

# FastAPI app URL (available after first deploy -- check Databricks UI > Apps)
FASTAPI_APP_URL=https://<YOUR_FASTAPI_APP_URL>

# --- Populated after deploying examples/1-browser-ui/ ---

# React UI app name
REACT_APP_NAME=react-app

# Workspace path to sync React UI source code to
REACT_WORKSPACE_PATH=/Workspace/Users/<YOUR_USERNAME>/react-app
